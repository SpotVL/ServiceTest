<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.spotvl.servicetest.MainActivity"
    >
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/info_window"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#d6d6d6"
        android:id="@+id/scroll_status"
        >
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:text="Small Text"
          android:id="@+id/info_window"
          />
    </ScrollView>


    <android.support.v7.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="Send voice"
        android:id="@+id/switch_send_voice"
        />
    <android.support.v7.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="Receive voice"
        android:id="@+id/switch_recv_voice"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <Button
          android:id="@+id/btn_start_vm_service"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Start Service"
          android:padding="8dp"
          />
      <Button
          android:id="@+id/btn_stop_vm_service"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Stop Service"
          android:padding="8dp"
          />
    </LinearLayout>

  </LinearLayout>

</ScrollView>
